            \curvAngle=30;
        }
        \def \curvColor{Cerulean}
    } {}
    \ifstrequal{R3}{#1}{
        %\CurveAtCenter[#1]{48.375}{#3}{#4}{30}{#5}
        \tikzmath{
            \curvRadius=48.375;
            \curvAngle=30;
        }
        \def \curvColor{RoyalBlue}
    }{}
    \ifstrequal{R4}{#1}{
        %\CurveAtCenter[#1]{54.563}{#3}{#4}{30}{#5}
        \tikzmath{
            \curvRadius=54.563;
            \curvAngle=30;
        }
        \def \curvColor{MidnightBlue}
    }{}
