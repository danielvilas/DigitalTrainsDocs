\newcommand\PaintRailBeizer[6]{
                    %{#1}   {#2} {#3} {#4}    {#5}         {#6}
    %\PaintRailBeizer{color}{stx}{sty}{h=0.02}{l=-2.6->2.0}{r=0.2}
    \draw [#1] (#2,#3) -- ++(#6,0)
        .. controls +(1.4,0) and +(-1,0) .. ++(#5,-1) -- ++(#6,0)
        -- ++(0,-#4) -- ++(-#6,0)
        .. controls +(-1,0) and +(1.4,0) .. ++(-#5,1) -- ++(-#6,0);
}

\newcommand\PaintRailBeizerUp[6]{
                     %{#1}   {#2} {#3} {#4}    {#5}         {#6}
    %\PaintRailBeizer{color}{stx}{sty}{h=0.02}{l=-2.6->2.0}{r=0.2}
    \draw [#1, fill=#1] (#2,#3) -- ++(#6,0)
    .. controls +(0.85,0) and +(0,0) .. ++(#5,-0.52) -- ++(0,-#4)
    .. controls +(0,0) and +(0.85,0) .. ++(-#5,0.52) -- ++(-#6,0);
}

\newcommand\PaintRailBeizerDown[6]{
                     %{#1}   {#2} {#3} {#4}    {#5}         {#6}
    %\PaintRailBeizer{color}{stx}{sty}{h=0.02}{l=-2.6->2.0}{r=0.2}
    \draw [#1, fill=#1] (#2,#3) 
    .. controls +(0,0) and +(-0.5,0) .. ++(#5,-0.38)
    -- ++(#6,0) -- ++(0,-#4) -- ++(-#6,0)
    .. controls +(-0.5,0) and +(0,0) .. ++(-#5,0.38);
}


\newcommand\PaintRailStraightDxDy[6]{
                     %{#1}   {#2} {#3} {#4}   {#5}{#6}
    %\PaintRailBeizer{color}{stx}{sty}{h=0.02}{dx}{dy}
    \draw [#1, fill=#1] (#2,#3) -- ++(#5,#6) -- ++(0,#4)
        -- ++(-#5,-#6) -- ++(0,-#4);
}


